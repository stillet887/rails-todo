<%= form_for @task do |f| %>
    <% if @task.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@task.errors.count, "error") %> prohibited
            this task from being saved:
          </h2>
          <ul>
            <% @task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :status %><br>
      <%= f.check_box :status %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>